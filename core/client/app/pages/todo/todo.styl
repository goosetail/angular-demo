@require '../../common/mixins.styl';
@require 'nib';

#todo

	.back
		absolute top 5px left 20px
		font-size 25px
		cursor pointer

		&:hover
			color angular-dark-red

	h2
		text-align center
		font-size 40px


	ul.list
		width 80%
		padding 0 10px
		margin 0 auto
		margin-bottom 40px

		li
			list-style-type none
			font-size 20px
			padding 15px 0
			border-bottom 1px solid #ddd


	.add-item
		text-align center

		input
			border none
			resize none
			border-bottom 1px solid #ccc
			width 50%
			margin-right 15px
			font-size 22px

			&:focus
				outline none


		button
			border none
			background none
			background-color angular-red
			padding 5px 10px
			color #fff
			font-size 16px

			&:focus
				outline 1px solid #777
